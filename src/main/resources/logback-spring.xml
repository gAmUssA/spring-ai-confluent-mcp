<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Colored console appender with concise pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%magenta(%d{MMM dd HH:mm:ss}) %highlight(%-5level) %cyan(%logger{20}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Async appender for better performance -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC"/>
    </root>

    <!-- Reduce Spring Boot noise -->
    <logger name="org.springframework.boot" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.context" level="WARN"/>
    <logger name="org.springframework.beans" level="WARN"/>

    <!-- Your application logger -->
    <logger name="com.example.demo" level="DEBUG"/>

    <!-- MCP client logging -->
    <logger name="io.modelcontextprotocol" level="INFO"/>

    <!-- Spring AI logging (useful for debugging) -->
    <logger name="org.springframework.ai" level="INFO"/>

</configuration>
